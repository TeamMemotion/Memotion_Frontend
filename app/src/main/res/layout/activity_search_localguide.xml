<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".local.LocalguideActivity">

    <include
        android:id="@+id/action_localguide"
        layout="@layout/action_inner_bar_top"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:text="로컬 가이드"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/action_localguide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="@+id/action_localguide"
        app:layout_constraintTop_toTopOf="@+id/action_localguide"
        app:layout_constraintVertical_bias="0.484" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchLocal"
        android:layout_width="370dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_light_pink_background"
        android:backgroundTint="#4DFABCBC"
        app:iconifiedByDefault="false"
        app:queryHint="원하는 지역을 검색하세요"
        android:queryBackground="@null"
        android:textSize="15sp"
        app:closeIcon="@drawable/baseline_close_24_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_localguide" />

    <TextView
        android:id="@+id/searchRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="'강릉' 루트기록"
        android:textColor="#E15F81"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchLocal" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchRoute"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_route" />

</androidx.constraintlayout.widget.ConstraintLayout>